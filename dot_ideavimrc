set NERDTree
set scrolloff=8

nnoremap <C-n> :NERDTree<CR>

# Lines
set number
set relativenumber

# Remap ESC
imap <C-k> <Esc>

# Tab switching
nnoremap gh gT
nnoremap gl gt

# IDE shortcuts
sethandler <C-C> a:ide
sethandler <C-D> a:ide
sethandler <C-F> a:ide
sethandler <C-O> a:vim
sethandler <C-V> a:ide
sethandler <C-X> a:ide
